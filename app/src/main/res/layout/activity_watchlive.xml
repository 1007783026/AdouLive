<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.zhibodemo.ui.weight.HeightSensenableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hsrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.tencent.ilivesdk.view.AVRootView
        android:id="@+id/av_rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.administrator.zhibodemo.ui.weight.BottomSwitchLayout
        android:id="@+id/bottomswitchlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <com.example.administrator.zhibodemo.ui.weight.BottomChatSwitchLayout
        android:id="@+id/chatswitchlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <com.example.administrator.zhibodemo.ui.weight.LiveMsgListView
        android:id="@+id/lmlv"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_above="@id/bottomswitchlayout" />

    <tyrantgit.widget.HeartLayout
        android:id="@+id/heartlayout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"></tyrantgit.widget.HeartLayout>

    <com.example.administrator.zhibodemo.ui.weight.danmu.DanmuView
        android:id="@+id/danmuview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lmlv" />

</com.example.administrator.zhibodemo.ui.weight.HeightSensenableRelativeLayout>